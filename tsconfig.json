{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2022"],
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "lib": ["es2022"]
}
